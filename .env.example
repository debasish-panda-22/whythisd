# Backend Environment Variables Template
NODE_ENV=development
PORT=3030
HOSTNAME=0.0.0.0

# CORS Configuration
ORIGIN=http://localhost:3000,https://localhost:3000,https://your-domain.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_LIMIT=100

# Redis Configuration
REDIS_URL=redis://redis:6379

# API Configuration
API_VERSION=v1
API_BASE_URL=/api/v1

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-super-secret-encryption-key-here

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# External API Configuration (if needed)
EXTERNAL_API_KEY=your-external-api-key-here
EXTERNAL_API_URL=https://api.example.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000